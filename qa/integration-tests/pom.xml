  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-failsafe-plugin</artifactId>
        <configuration>
          <systemProperties>
            <property>
              <name>identity.docker.image.version</name>
              <value>${version.identity}</value>
            </property>
          </systemProperties>
          <groups>!rdbms</groups>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>rdbms</id>
      <build>
